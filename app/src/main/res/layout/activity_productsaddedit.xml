<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/productssaddedit_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputproductname_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputproductname_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/productlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputproductname"
            style="@style/inputitem"
            android:layout_weight="80"
            android:hint=""
            android:inputType="text"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_buttons_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            android:id="@+id/productaddedit_savebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/savebutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/productaddedit_donebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/donebutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="62"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_filter_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/productaddedit_productfilterlabel"
            style="@style/inputitemlabel"
            android:layout_weight="16"
            android:text="@string/filterlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/productaddedit_inputfilter"
            style="@style/inputitem"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productaddedit_productlist_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/productaddedit_productlist_heading_productname"
            style="@style/listview_heading_col_standard"
            android:layout_weight="96"
            android:text="@string/productslabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/productaddedit_productlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>