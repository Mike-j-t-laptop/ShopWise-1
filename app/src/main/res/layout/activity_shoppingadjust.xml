<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/shoppingadjust_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppingadjust_orginalvalues_heading"
        style="@style/listview_heading_standard"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/listview_vertical_padding_normal"
        >
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="20"
            android:text="@string/originalvalues"
            />
        <TextView
            android:id="@+id/shoppingadjust_orig_productname"
            style="@style/listview_heading_col_standard"
            android:layout_weight="41"
            />
        <TextView
            android:id="@+id/shoppingadjust_orig_quantity"
            style="@style/listview_heading_col_standard"
            android:layout_weight="4"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shoppingadjust_orig_cost"
            style="@style/listview_heading_col_standard"
            android:layout_weight="10"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shoppingadjust_orig_total"
            style="@style/listview_heading_col_standard"
            android:layout_weight="15"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">
        <TextView
            android:id="@+id/shoppingadjust_morebutton"
            style="@style/actionbutton"
            android:layout_weight="18.5"
            android:text="@string/addbutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shoppingadjust_lessbutton"
            style="@style/actionbutton"
            android:layout_weight="18.5"
            android:text="@string/lessbutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="61"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="10"
            />
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="25"
            android:text="@string/productnamelabel"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/shoppingadjust_inputproductname"
            style="@style/inputitem"
            android:layout_weight="61"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="10"
            />
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="25"
            android:text="@string/costlabel"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/shoppingadjust_inputcost"
            style="@style/inputitem"
            android:layout_weight="14"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="49"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/listview_vertical_padding_normal">
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="10"
            />
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="25"
            android:text="@string/quantitylabel"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/shoppingadjust_inputquantity"
            style="@style/inputitem"
            android:layout_weight="14"/>
        <TextView
            style="@style/inputitemlabel"
            android:layout_weight="49"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shoppingadjust_savebutton"
            style="@style/actionbutton"
            android:layout_weight="18.5"
            android:text="@string/savebutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shoppingadjust_undobutton"
            style="@style/actionbutton"
            android:layout_weight="18.5"
            android:text="@string/undobutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shoppingadjust_donebutton"
            style="@style/actionbutton"
            android:layout_weight="18.5"
            android:text="@string/donebutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="40.5"
            />
    </LinearLayout>
</LinearLayout>